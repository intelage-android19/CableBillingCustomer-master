<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="17dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="Additional Details"
                    android:textColor="@color/white"
                    android:textSize="20sp" />


            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    >

                    <TextView
                        android:id="@+id/tvSetTopNumber"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="SetTop Box Number"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSetTopNumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvSetTopNumber"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtSetTopNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvSetTopNumber1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvModelnumber"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="Model Number"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvModelnumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvModelnumber"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtModelnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvModelnumber1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAggreementno"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="Agreement Number"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAggreementno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvAggreementno"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtAgreementNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvAggreementno1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvViewvingCard"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="Viewing Card Number"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvViewvingCard1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvViewvingCard"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtViewvingCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvViewvingCard1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvRegistrationDate"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="Registration Date"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvRegistrationDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvRegistrationDate"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtRegistrationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvRegistrationDate1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDueAmount"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:text="Due Amount"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvDueAmount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvDueAmount"
                        android:text=":"
                        android:textColor="@color/transparant"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtDueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvDueAmount1"
                        android:text="15514546454"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/btnOk"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="OK"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:cardBackgroundColor="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="OK"
                    android:textColor="@android:color/white" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    <!--Green #5cd65c-->
</androidx.cardview.widget.CardView>
