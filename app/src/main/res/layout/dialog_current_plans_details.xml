<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="17dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_current_plan_details"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivCloseCurrentPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close_white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="Name"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/nameid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:layout_toRightOf="@+id/name"
                                android:textColor="@color/colorAccent"
                                android:textSize="16dp" />


                            <TextView
                                android:id="@+id/tvCurrentPlanName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Aditya Falcon"
                                android:layout_marginStart="10dp"
                                android:layout_toRightOf="@+id/nameid"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />
                        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Validity"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Validity"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/Validityid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:layout_toRightOf="@+id/Validity"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvCurrentPlanValidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="22 Days"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/Validityid"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Price"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/PriceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:layout_toRightOf="@+id/Price"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvCurrentPlanPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/PriceId"
                    android:text="300.0"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/purchasedate"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Purchase Date"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/purchasedateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:layout_toRightOf="@+id/purchasedate"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvPurchaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/purchasedateId"
                    android:text="300.0"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ExpiryDate"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Expiry Date"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/ExpiryDateId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:layout_toRightOf="@+id/ExpiryDate"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvexpiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/ExpiryDateId"
                    android:text="300.0"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pMode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Payment Mode"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/pModeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:layout_toRightOf="@+id/pMode"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/tvPMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/pModeId"
                    android:text="300.0"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>