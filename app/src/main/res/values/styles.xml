<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar_style" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
        <!--<item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>-->
        <!--<item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar </item>-->
    </style>

    <style name="TextHeadingStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextNormalStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewAccount" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewDialog" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!--EditText Style-->
    <style name="EditTextStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Button Style-->
    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/button_ripple_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>

